<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:DisneylandMap.Components"

        xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
>

    <Design.PreviewWith>
        <controls:AttractionNum/>
    </Design.PreviewWith>

    <Style Selector="controls|AttractionNum">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="White" Width="22" Height="22" VerticalAlignment="Center" CornerRadius="22" BorderBrush="Black" BorderThickness="3">
                    <TextBlock Classes="bold" FontSize="12" Foreground="Black" Text="{TemplateBinding Num}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
